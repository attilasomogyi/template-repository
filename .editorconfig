# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 79
indent_size = 4

[*.{js, ts}]
max_line_length = 80

[*.java]
max_line_length = 100
indent_size = 4

[*.{html, xml, css}]


[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = 80